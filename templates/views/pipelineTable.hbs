<script>
    $(document).ready(function () {
        var table = $('#myTable').DataTable();

        // Function to fetch and update table data
        function fetchAndUpdateTableData() {
            fetch(`/pipeline-table-data`, {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                },
            }).then(res => res.json()).then(response => {
                if (response.success) {
                    // Clear existing table data
                    table.clear();

                    // Check if data array is empty
                    if (response.data.length === 0) {
                        // Display "No data available" message and redraw the table
                        table.draw();
                    } else {
                        // Append new data to the table
                        response.data.forEach(item => {
                            table.row.add([
                                item.field_name.replace('"', ""),
                                item.createdAt.split('T')[0],
                                `<button class="Btn edit-btn" data-id="${item.id}" data-name='${item.field_name.replace('"', "")}' data-toggle="modal" data-target="#pipeline-listing-btn" style="padding: 5px; width: 100px; border-radius: 5px; background: #566a7f4d; backdrop-filter: blur(2px); color: white">
                                <span class="text">Edit</span>
                                    </button>
                                    `,
                                `<button class="Btn delete-btn" data-id="${item.id}" style="padding: 5px; width: 100px; border-radius: 5px; background:#f4472978; color: white">
                                      <span class="text">Delete</span>
                                     </button>`



                            ]).draw();
                        });

                        // Add event listeners for edit and delete buttons
                        $('.edit-btn').on('click', function () {
                            var id = $(this).data('id');
                            var name = $(this).data('name');
                            editRow(id,name);
                        });

                        $('.delete-btn').on('click', function () {
                            var id = $(this).data('id');
                            deleteRow(id);
                        });
                    }

                } else {
                    console.error('Failed to fetch data');
                }
            }).catch(error => {
                console.error('There has been a problem with your fetch operation:', error);
            });
        }

        function editRow(id,name) {
            // note : this form is available in the navbar.hbs file
            const form = document.querySelector('#pipeline-listing-btn form')
            form.querySelector('#editPipelineName').value = name;
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                const inputvalue = form.querySelector('#editPipelineName').value;
          
                fetch(`/update-pipeline-fieldname/${id}`,{
                    method:'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body:JSON.stringify({
                        field_name:inputvalue
                    })
                }).then((res)=>res.json())
                .then(data=>{
                    form.querySelector('.close').click()
                    toastr.success('Pipeline name updated successfully')
                    setTimeout(()=>{
                        window.location.reload()
                    },1000)
                 /*   fetchAndUpdateTableData(); */
                })
            })
        }

        function deleteRow(id) {
            // Implement your delete functionality here
            console.log('Delete row with id:', id);
            fetch(`/pipeline-remove/${id}`, {
                method: "POST",
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(res => res.json()).then(response => {
                if (response.success) {
                    toastr.success('Pipeline deleted successfully')
                    fetchAndUpdateTableData();
                } else {
                    console.error('Failed to delete row');
                }
            }).catch(error => {
                console.error('There has been a problem with your delete operation:', error);
            });
        }

        fetchAndUpdateTableData();

    });
</script>


